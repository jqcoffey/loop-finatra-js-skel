div.loading {
  align-items: center
  width: 100%
  height: 100%
  text-align: center
  padding-top: 50px

  svg {
    display: inline-block
    width: 30px
    height: 30px
    animation: rotation-effect 2s linear infinite

    circle {
      stroke-width: 10%
      animation: dash 1.5s ease-in-out infinite
      stroke-linecap: round
      stroke: $text-disabled
      fill: none
      stroke-miterlimit: 10
      stroke-dasharray: 100%,400%
      stroke-dashoffset: -50%
    }
  }

  span {
    display: block
    margin-top: 10px
    font-size: 12px
    color: $text-disabled
  }
}

@keyframes rotation-effect {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}

@keyframes dash {
  0% {
    stroke-dasharray: 0,400%
    stroke-dashoffset: 0
  }
  50% {
    stroke-dasharray: 200%,400%
    stroke-dashoffset: -70%
  }
  100% {
    stroke-dasharray: 200%,400%
    stroke-dashoffset: -245%
  }
}
